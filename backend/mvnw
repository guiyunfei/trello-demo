# This script is a simplified version of the Maven wrapper script
# For full version, see: https://github.com/apache/maven-wrapper

set -e

MAVEN_VERSION="3.9.5"
MAVEN_HOME="${MAVEN_HOME:-.}"

if [ ! -d "$MAVEN_HOME/.mvn" ]; then
  mkdir -p "$MAVEN_HOME/.mvn"
fi

MAVEN_JAR="$MAVEN_HOME/.mvn/wrapper/maven-wrapper.jar"
MAVEN_PROPS="$MAVEN_HOME/.mvn/wrapper/maven-wrapper.properties"

if [ ! -f "$MAVEN_JAR" ]; then
  echo "Downloading Maven wrapper..."
  mkdir -p "$(dirname "$MAVEN_JAR")"
  curl -fsSL "https://repo.maven.apache.org/maven2/org/apache/maven/wrapper/maven-wrapper/3.2.0/maven-wrapper-3.2.0.jar" -o "$MAVEN_JAR"
fi

exec java -cp "$MAVEN_JAR" org.apache.maven.wrapper.MavenWrapperMain "$@"
